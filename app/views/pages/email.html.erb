<div class="container email">

  <h1 class=text-center>Send E-mail</h1>

  <p>From: <%= current_user.email %> </p>
  <form class="form-inline text-center" action="/send" method="post">
    <!-- name, email, message fields -->
    <div class="form-group">
      <input type="text" class="form-control name" name="name" placeholder="Your Name">
    </div>
    <br><br>

    <div class="form-group">
      <input type="email" class="form-control email" name="email" placeholder="Destination E-mail">
    </div>
    <br><br>

    <div class="form-group">
      <textarea name="message" class="form-control message" rows="4" cols="40" placeholder="Your Message"></textarea>
    </div>
    <br><br>

    <button type="submit" class="btn btn-success submit" name="button">Send</button>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
